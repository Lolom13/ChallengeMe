{% trans_default_domain "players-navigation-left" %}
<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a href="{{ path('player_homepage') }}" class="site_title"><i class="fa fa-shield"></i> <span>ChallengeMe</span></a>
        </div>

        <div class="clearfix"></div>

        {# menu profile quick info #}
        <div class="profile">
            <div class="profile_pic">
                {% image "@AdminBundle/Resources/public/images/img.jpg" %}
                    <img src="{{ asset_url }}" alt="..." class="img-circle profile_img">
                {% endimage %}
            </div>
            <div class="profile_info">
                <span>{{ "msg.welcome" | trans | desc("Welcome,") | meaning("Welcome message") }}</span>
                <h2>{{ app.user.infoUser.firstname }} {{ app.user.infoUser.lastname }}</h2>
            </div>
        </div>
        {# /menu profile quick info #}

        <br />

        {# sidebar menu #}
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            {# General #}
            <div class="menu_section">
                <h3>General</h3>
                <ul class="nav side-menu">
                    <li><a><i class="fa fa-home"></i> {{ "nav.home" | trans | desc("Home") | meaning("Home button") }} <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a href="{{ path('player_homepage') }}">{{ "nav.home.dashboard" | trans | desc("Dashboard") | meaning("Dashboard button") }}</a>
                            </li>
                            <li><a href="{{ path('administration_profile') }}">{{ "nav.home.profile" | trans | desc("Profile") | meaning("Profile button") }}</a>
                            </li>
                            <li><a href="{{ path('administration_inbox') }}">{{ "nav.home.private-message" | trans | desc("Private messages") | meaning("PM button") }}</a>
                            </li>
                            <li><a href="javascript:;">{{ "nav.home.system" | trans | desc("System") | meaning("System button") }}</a>
                            </li>
                        </ul>
                    </li>
                    {% if is_granted('ROLE_MODERATOR') %}
                    <li><a><i class="fa fa-user"></i> {{ "nav.user-management" | trans | desc("User management") | meaning("User management button") }} <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a href="{{ path('administration_playersManagement') }}">{{ "nav.user-management.players" | trans | desc("Players") | meaning("Players management button") }}</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('administration_adminsManagement') }}">{{ "nav.user-management.administrators" | trans | desc("Administrators") | meaning("Administrators management button") }}</a></li>
                                <li><a href="{{ path('administration_moderatorsManagement') }}">{{ "nav.user-management.moderators" | trans | desc("Moderators") | meaning("Moderators management button") }}</a></li>
                            {% endif %}
                            <li><a href="{{ path('administration_redactorsManagement') }}">{{ "nav.user-management.redactors" | trans | desc("Redactors") | meaning("Redactors management butotn") }}</a></li>
                        </ul>
                    </li>
                    {% endif %}
                </ul>
            </div>

            {# Challenges management #}
            <div class="menu_section">
                <h3>{{ "nav.challenges-management" | trans | desc("Challenges") | meaning("Challenges management button") }}</h3>
                <ul class="nav side-menu">
                    <li><a href="javascript:void(0)"><i class="fa fa-gavel"></i> {{ "nav.challenges-management-challenges" | trans | desc("Challenges") | meaning("Challenges section") }} <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                        {% if categories|length == 0 %}
                            <li><a href="javascript:void(0)">No category</a></li>
                        {% else %}
                            {% for category in categories %}
                                <li><a href="{{ path('challenges_category_details', {'category_id': category.id}) }}">{{ category.title }}</a></li>
                            {% endfor %}
                        {% endif %}
                        </ul>
                    </li>
                </ul>
            </div>

            {# Players & teams management #}
            <div class="menu_section">
                <h3>{{ "nav.players-and-teams-management" | trans | desc("Players & Teams") | meaning("Players and teams management butotn") }}</h3>
                <ul class="nav side-menu">
                    <li><a href="{{ path('player_players_list') }}"><i class="fa fa-group"></i> Challengers</a></li>
                    <li><a href="{{ path('player_teams_list') }}"><i class="fa fa-list"></i> Teams on the field</a></li>
                    <li><a href="javascript:void(0)"><i class="fa fa-rebel"></i> My Team</a></li>
                </ul>
            </div>

        </div>
        {# /sidebar menu #}

        {# /menu footer buttons #}
        <div class="sidebar-footer hidden-small">
            <a data-toggle="tooltip" data-placement="top" title="Settings">
                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
            </a>
            <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
            </a>
            <a data-toggle="tooltip" data-placement="top" title="Lock">
                <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
            </a>
            <a data-toggle="tooltip" data-placement="top" title="Logout" href="{{ path('player_logout') }}">
                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
            </a>
        </div>
        {# /menu footer buttons #}
    </div>
</div>