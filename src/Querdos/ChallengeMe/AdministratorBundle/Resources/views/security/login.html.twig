{% extends "AdminBundle::base.html.twig" %}

{% block head %}
    {{ parent() }}

    {% javascripts '@jquery_js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock head %}

{% block body %}
    <body style="background:#F7F7F7;">
    <div class="">
        <a class="hiddenanchor" id="toregister"></a>
        <a class="hiddenanchor" id="tologin"></a>

        <div id="wrapper">
            <div id="login" class=" form">
                <section class="login_content">
                    <form action="{{ path('admin_login_check') }}" method="post">
                        <h1>Administration</h1>
                        {% if error %}
                            <div class="alert alert-danger alert-dismissible fade in" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <div>
                            <input type="text" class="form-control" placeholder="Username" required="" id="username" name="_username" value="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Password" id="password" name="_password" required="" />
                        </div>
                        <div>
                            <button type="submit">Login</button>
                            <a class="reset_pass" href="#">Lost your password?</a>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="clearfix"></div>
                        <div class="separator">
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><i class="fa fa-shield" style="font-size: 26px;"></i> ChallengeMe</h1>
                                <p>Â©{{ "now"|date("Y") }} All Rights Reserved. <br>ChallengeMe | ESIEA | Hamza ESSAYEGH (Querdos)</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>

    </body>
{% endblock body %}